@model VaccineCentre

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Admin Login</title>
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .h-custom {
            height: calc(100% - 73px);
        }

        @@media (max-width: 450px) {
            .h-custom {
                height: 100%;
            }
        }
    </style>

</head>
<body>

    <br /><br /><br />

    <div class="row d-flex justify-content-center align-items-center  ">
        <div class="col-md-9 col-lg-6 col-xl-5 ">
            <img src="~/img/vcCentre.jpg"
                 class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-6 offset-xl-1">
            <form method="post" action="AddVaccineCentre">


                <div class="divider d-flex align-items-center my-4">

                    <p class="text-center h3 fw-bold mx-1 mb-0">Προσθήκη Εμβολιαστικού Κέντρου</p>
                </div>
                <br />

                <!-- Email input -->
                <div class="form-group">
                    <label class="form-label  h5" asp-for="Name">Όνομα Εμβολιαστικού Κέντρου</label>
                    <input asp-for="Name" class="form-control form-control-lg"
                           placeholder="Εισάγετε Όνομα Κέντρου" required onkeypress="CheckSpace(event)"/>

                </div>
                <br />
                <!-- Password input -->
                <div class="form-group row">

                    <div class="col-6 col-md-8  ">
                        <label class="form-label h5" asp-for="Township">Περιοχή Εμβολιαστικού Κέντρου</label>
                    </div>

                    <div class="h5 col-6 col-md-2">
                        @Html.DropDownListFor(t => t.Township,
                    new SelectList(Enum.GetNames(typeof(Townships))),
                    "Επέλεξε Δήμο",
                    new { @required = "required" })
                    </div>
                    <div class=" col-xl-10 offset-3 ">
                        <div asp-validation-summary="All" class=" text-danger" style="list-style: none; margin-left: -40px"></div>

                    </div>
                        

                    
                    

                </div>
                

                <div class="text-center text-lg-start ">
                    <button type="submit" class="btn btn-primary btn-lg"
                            style="padding-left: 2.5rem; background-color: #003476; padding-right: 2.5rem;">
                        Προσθήκη
                    </button>


                </div>

            </form>
        </div>


    </div>




</body>
</html>

<script>
    function CheckSpace(event) {
        if (event.which == 32) {
            event.preventDefault();
            return false;
        }
    }
</script>


