@model Admin

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Admin Login</title>
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .h-custom {
            height: calc(100% - 73px);
        }

        @@media (max-width: 450px) {
            .h-custom {
                height: 100%;
            }
        }
    </style>

</head>
<body style="background-color: #fefbfc;">

    <br />

    <div class="card " style="border-radius: 1rem;">
        <br /><br />
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="~/img/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form method="post">


                        <div class="divider d-flex align-items-center my-4">

                            <p class="text-center h3 fw-bold mx-1 mb-0">Σύνδεση Διαχειριστή</p>
                        </div>
                        <br />
                        <!-- Email input -->
                        <div class="form-group">
                            <label class="form-label  h5" asp-for="username">Όνομα χρήστη</label>
                            <input asp-for="username" class="form-control form-control-lg"
                                   placeholder="Εισάγετε Όνομα χρήστη" required onkeypress="CheckSpace(event)" />

                        </div>

                        <!-- Password input -->
                        <div class="form-group">



                            <label class="form-label h5 " asp-for="password">Κωδικός πρόσβασης</label>
                            <input asp-for="password" type="password" class="form-control form-control-lg"
                                   placeholder="Εισάγετε Κωδικό πρόσβασης" required onkeypress="CheckSpace(event)" />

                        </div>

                        <div asp-validation-summary="All" class="text-danger" style="font-size:15px;">


                        </div>
                        <div class="text-center text-lg-start ">
                            <button type="submit" class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; background-color: #003476; padding-right: 2.5rem;">
                                Σύνδεση
                            </button>

                        </div>

                    </form>
                </div>
            </div>
        </div>
        <br /><br /><br /><br />

    </div>


</body>
</html>



<script>
    function CheckSpace(event) {
        if (event.which == 32) {
            event.preventDefault();
            return false;
        }
    }

</script>

