@model Employee


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Employee Login</title>

</head>
<body style="background-color: #fefbfc;">

    <br />

    <div class=" d-flex justify-content-center align-items-center py-1">
        <div class="col  col-xl-10 ">
            <div class="card " style="border-radius: 1rem; ">
                <div class="row">
                    <div class="col-md-6 col-lg-5 d-none d-md-block ">
                        <img src="~/img/emp.jpg"
                             alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; width:500px;height:500px" />
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">

                            <form method="post">

                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <span class="h3 fw-bold mb-0">Σύνδεση Υπαλλήλου</span>
                                </div>
                                <br />
                                <div class="form-outline mb-4">
                                    <input asp-for="username" class="form-control form-control-lg" placeholder="Εισάγετε Όνομα χρήστη" required onkeypress="CheckSpace(event)"/>
                                    <label asp-for="username" class="form-label h5">Όνομα Χρήστη</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="password" type="password" placeholder="Εισάγετε Κωδικό πρόσβασης" class="form-control form-control-lg" required onkeypress="CheckSpace(event)"/>
                                    <label asp-for="password" class="form-label h5">Κωδικός Πρόσβασης</label>
                                </div>
                                <div asp-validation-summary="All" class=" text-danger offset-1" style="font-size:17px;"></div>
                                <div class="pt-1 mb-4">
                                    <button class="btn btn-dark btn-lg btn-block" style="background-color:#003476" type="submit">Σύνδεση</button>
                                </div>


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>




</body>
</html>


<script>
    function CheckSpace(event) {
        if (event.which == 32) {
            event.preventDefault();
            return false;
        }
    }

</script>

